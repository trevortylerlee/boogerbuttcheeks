---
import { formatDate } from "@lib/util";

const { post } = Astro.props;
---

<li class="mt-3 flex flex-col no-underline sm:flex-row sm:justify-between">
  <a href={`/blog/${post.slug}`}>
    <span>{post.data.title}</span>
  </a>
  <div
    class="font-mono text-lightModeForegroundMuted dark:text-darkModeForegroundMuted"
  >
    {formatDate(post.data.publicationDate)}
  </div>
</li>
