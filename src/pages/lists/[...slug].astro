---
import { type CollectionEntry, getCollection } from "astro:content";

import BaseLayout from "@/layouts/BaseLayout.astro";

import SeoPost from "@components/SeoPost.astro";

interface Props {
  entry: CollectionEntry<"lists">;
}

export async function getStaticPaths() {
  const list = await getCollection("lists");
  return list.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout>
  <SeoPost slot="head" entry={entry} />
  <div>
    <h1 class="mt-3">{entry.data.title}</h1>
    <hr class="opacity-15" />
    <div
      class="dark:prose-a:text-darkModeLink prose prose-neutral mx-auto dark:prose-invert prose-a:text-lightModeLink prose-code:bg-[blue] prose-code:text-darkModeForeground"
    >
      <Content />
    </div>
  </div>
</BaseLayout>
